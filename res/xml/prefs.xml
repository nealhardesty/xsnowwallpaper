<?xml version="1.0" encoding="utf-8"?><PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">  <PreferenceCategory android:title="General">    <android.preference.EditTextPreference android:defaultValue="20"                                           android:key="numtrees"                                           android:summary="Number of trees"                                           android:title="# Trees"/>    <android.preference.EditTextPreference android:defaultValue="100"                                           android:key="numflakes"                                           android:summary="Number of snowflakes"                                           android:title="# Snowflakes"/>    <android.preference.EditTextPreference android:defaultValue="5"                                           android:key="vspeed"                                           android:summary="Snow fall speed (default 5)"                                           android:title="Snowfall Speed"/>    <android.preference.CheckBoxPreference android:defaultValue="true"                                           android:key="wind"                                           android:summary="Allow Wind"                                           android:title="Wind?"/>  </PreferenceCategory>  <PreferenceCategory android:title="Santa">    <android.preference.CheckBoxPreference android:defaultValue="false"                                           android:title="Santa?"                                           android:summary="Show Santa"                                           android:key="santa"/>    <android.preference.CheckBoxPreference android:defaultValue="false"                                           android:title="Rudolph?"                                           android:summary="Show Rudolph"                                           android:key="rudolph"/>  </PreferenceCategory></PreferenceScreen>